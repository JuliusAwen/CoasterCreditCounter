<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="de.juliusawen.coastercreditcounter">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="de.juliusawen.coastercreditcounter.globals.App"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/title_app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".presentation.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.locations.ShowLocationsActivity" />
        <activity android:name=".presentation.elements.SortElementsActivity" />
        <activity android:name=".presentation.elements.PickElementsActivity" />
        <activity android:name=".presentation.parks.ShowParkActivity" />
        <activity android:name=".presentation.visits.ShowVisitActivity" />
        <activity android:name=".presentation.TestActivity" />
        <activity android:name=".presentation.visits.CreateVisitActivity" />
        <activity android:name=".presentation.attractionCategories.ManageAttractionCategoriesActivity" />
        <activity android:name=".presentation.navigationHub.NavigationHubActivity"/>
        <activity
            android:name=".presentation.locations.CreateLocationActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".presentation.elements.EditElementActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".presentation.CreateSimpleStringActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
    </application>

</manifest>