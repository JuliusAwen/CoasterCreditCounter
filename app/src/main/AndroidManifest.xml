<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.juliusawen.coastercreditcounter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/title_app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.activities.BrowseLocationsActivity" />
        <activity android:name=".presentation.activities.SortElementsActivity" />
        <activity android:name=".presentation.activities.AddOrInsertLocationActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity android:name=".presentation.activities.EditLocationActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
    </application>

</manifest>