<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayoutRecyclerViewItem"
        style="@style/StandardBarLayout"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/viewRecyclerViewItem_Seperator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/imageViewRecyclerViewItem"
                style="@style/ExpandToggleImageHolder"
                android:contentDescription="@string/description_image_view" />

            <LinearLayout
                android:id="@+id/linearLayoutRecyclerViewItem_Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewRecyclerViewItem_UpperDetail"
                    style="@style/DetailTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4sp"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/textViewRecyclerViewItem_Name"
                    style="@style/StandardTextView"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/textViewRecyclerViewItem_LowerDetail"
                    style="@style/DetailTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4sp"
                    android:gravity="start"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutRecyclerViewItem_PrettyPrint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/default_color">

        <TextView
            android:id="@+id/textViewRecyclerViewItem_PrettyPrint"
            style="@style/PrettyPrintHeader"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" />

    </LinearLayout>

</LinearLayout>
