<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".presentation.activities.parks.ShowParkActivity">

    <include
        layout="@layout/floating_action_button"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"/>

        <android.support.design.widget.TabLayout
            style="@style/standard_bar_layout"
            android:id="@+id/tabLayoutShowPark"
            app:tabGravity="fill"
            app:tabMinWidth="100dp"
            app:tabMode="fixed"
            app:tabIndicatorColor="@color/white"
            app:tabIndicatorHeight="3dp"
            android:background="@color/colorPrimary"
            android:elevation="6dp">

            <android.support.design.widget.TabItem
                android:id="@+id/tabItemShowPark_Overview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <android.support.design.widget.TabItem
                android:id="@+id/tabItemShowPark_Attractions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <android.support.design.widget.TabItem
                android:id="@+id/tabItemShowPark_Visits"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPagerShowPark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>