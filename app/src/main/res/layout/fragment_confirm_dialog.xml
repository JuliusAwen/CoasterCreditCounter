<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/standard_bar_layout"
    android:background="?android:attr/selectableItemBackground"
    android:layout_gravity="bottom"
    android:elevation="6dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            style="@style/standard_button"
            android:id="@+id/buttonConfirmDialogFragment_cancel"
            android:contentDescription="@string/text_cancel"
            android:layout_weight="1"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey"/>

        <Button
            style="@style/standard_button"
            android:id="@+id/buttonConfirmDialogFragment_ok"
            android:contentDescription="@string/text_ok"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>