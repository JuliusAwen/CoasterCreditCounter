<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutConfirmDialogFragment"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:layout_gravity="bottom"
    android:background="?android:attr/selectableItemBackground"
    android:elevation="6dp"
    android:orientation="vertical">

    <View xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonConfirmDialogFragment_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/button_text_cancel" />

        <View xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey"/>

        <Button
            android:id="@+id/buttonConfirmDialogFragment_ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/button_text_ok" />

    </LinearLayout>

</LinearLayout>