<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/content_holder_layout"
    android:id="@+id/linearLayoutContentHolderLocation"
    android:orientation="horizontal">

    <!--<TextView-->
        <!--style="@style/contentHolder"-->
        <!--android:id="@+id/ContentHolderLocationTextView"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"/>-->


    <TextView
        style="@style/contentHolder"
        android:id="@+id/textViewContentHolderLocation"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"/>

    <ImageButton
        android:id="@+id/imageButtonContentHolder_DropDown"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:baselineAligned="false"
        android:contentDescription="@string/button_description_drop_down"
        android:scaleType="fitCenter"
        android:background="?android:attr/selectableItemBackground"
        android:visibility="gone"/>

</LinearLayout>

