<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/FrameLayoutRecyclerViewItemVisitedAttraction_Decrease"
            android:layout_height="match_parent"
            android:layout_width="92dp"
            android:background="@color/default_color">

            <ImageView
                style="@style/standard_image_holder"
                android:id="@+id/imageViewRecyclerViewItemVisitedAttraction_Decrease"
                android:contentDescription="@string/description_decrease"
                android:layout_height="32dp"
                android:background="@color/default_color"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_error_outline"/>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/linearLayoutRecyclerViewVisitedAttraction_Counter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                style="@style/standard_text_view"
                android:id="@+id/textViewRecyclerViewItemVisitedAttraction_Name"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="bottom|center_horizontal"/>

            <TextView
                style="@style/standard_text_view"
                android:id="@+id/textViewRecyclerViewItemVisitedAttraction_Count"
                android:textSize="28sp"
                android:layout_gravity="center"
                android:gravity="center" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/FrameLayoutRecyclerViewItemVisitedAttraction_Increase"
            android:layout_height="match_parent"
            android:layout_width="92dp"
            android:background="@color/default_color">

            <ImageView
                style="@style/standard_image_holder"
                android:id="@+id/imageViewRecyclerViewItemVisitedAttraction_Increase"
                android:contentDescription="@string/description_increase"
                android:layout_height="32dp"
                android:background="@color/default_color"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_error_outline"/>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>