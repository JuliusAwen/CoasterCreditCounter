<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frontend.attractions.CreateOrEditCustomAttractionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    style="@style/standard_edit_text"
                    android:id="@+id/editTextCreateOrEditAttractionName"
                    android:hint="@string/hint_enter_attraction_name"
                    android:textSize="16sp"
                    android:layout_margin="16dp"
                    tools:ignore="Autofill"/>

                <LinearLayout
                    style="@style/standard_bar_layout"
                    android:orientation="vertical">

                    <TextView
                        style="@style/spinner_label_text_view"
                        android:text="@string/spinner_text_attraction_type"/>

                    <Spinner
                        android:id="@+id/spinnerCreateOrEditAttraction_AttractionType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/standard_bar_layout"
                    android:orientation="vertical">

                    <TextView
                        style="@style/spinner_label_text_view"
                        android:text="@string/spinner_text_manufacturer"/>

                    <Spinner
                        android:id="@+id/spinnerCreateOrEditAttraction_Manufacturer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/standard_bar_layout"
                    android:orientation="vertical">

                    <TextView
                        style="@style/spinner_label_text_view"
                        android:text="@string/spinner_text_attraction_category"/>

                    <Spinner
                        android:id="@+id/spinnerCreateOrEditAttraction_AttractionCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/standard_bar_layout"
                    android:orientation="vertical">

                    <TextView
                        style="@style/spinner_label_text_view"
                        android:text="@string/spinner_text_status"/>

                    <Spinner
                        android:id="@+id/spinnerCreateOrEditAttraction_Status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/standard_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="5dip"
                        android:paddingEnd="5dip"
                        android:layout_marginStart="16dp"
                        android:textSize="16sp"
                        android:text="@string/text_untracked_rides"/>

                    <EditText
                        android:id="@+id/editTextCreateOrEditAttractionUntrackedRideCount"
                        style="@style/standard_edit_text"
                        android:layout_width="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="16dp"
                        android:hint="@string/hint_untracked_ride_count"
                        android:inputType="number"
                        android:textSize="16sp"
                        tools:ignore="Autofill" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>