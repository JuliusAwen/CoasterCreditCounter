<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutContentHolderCountableChild"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">

        <ImageView
            style="@style/standard_image_holder"
            android:id="@+id/imageViewContentHolderCountableChild_Decrease"
            android:layout_height="32dp"
            android:background="@color/white"
            android:layout_gravity="center"
            android:contentDescription="@string/description_decrease"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                style="@style/standard_text_view"
                android:id="@+id/textViewContentHolder_CountableChildName"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="bottom|center_horizontal"/>

            <TextView
                style="@style/standard_text_view"
                android:id="@+id/textViewContentHolder_CountableChildCount"
                android:textSize="28sp"
                android:layout_gravity="center"
                android:gravity="center" />

        </LinearLayout>


        <ImageView
            style="@style/standard_image_holder"
            android:id="@+id/imageViewContentHolderCountableChild_Increase"
            android:layout_height="32dp"
            android:background="@color/white"
            android:layout_gravity="center"
            android:contentDescription="@string/description_increase"/>

    </LinearLayout>

</LinearLayout>

