<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/StandardBarLayout"
    android:id="@+id/linearLayoutActionDialogUpDown"
    android:background="?android:attr/colorPrimary"
    android:elevation="6dp"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/frameLayoutDialogUpDown_Down"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground">

    <ImageButton
        style="@style/StandardImageHolder"
        android:id="@+id/buttonActionDialogUpDown_Down"
        android:contentDescription="@string/description_ok"
        android:background="@android:color/transparent"
        android:clickable="false" />

    </FrameLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <FrameLayout
        android:id="@+id/frameLayoutDialogUpDown_Up"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground">

        <ImageButton
            style="@style/StandardImageHolder"
            android:id="@+id/buttonActionDialogUpDown_Up"
            android:contentDescription="@string/description_cancel"
            android:background="@android:color/transparent"
            android:clickable="false" />

    </FrameLayout>

</LinearLayout>