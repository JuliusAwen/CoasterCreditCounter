<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
    </style>



    <!--LAYOUT-->

    <style name="StandardBarLayout" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40sp</item>
    </style>

    <style name="CreateOrEditAttractionBarLayout" parent="StandardBarLayout">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">16sp</item>
        <item name="android:layout_marginEnd">16sp</item>
        <item name="android:layout_marginBottom">6sp</item>
    </style>

    <style name="CreateOrEditAttractionSelectBarLayout" parent="CreateOrEditAttractionBarLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>



    <!--TEXT VIEW-->

    <style name="StandardTextView" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PrettyPrintTextView" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PrettyPrintHeader" parent="PrettyPrintTextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailTextView" parent="StandardTextView">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CreateOrEditAttractionTextView" parent="StandardTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">5dp</item>
    </style>



    <!--EDIT TEXT-->

    <style name="StandardEditText" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">18sp</item>
    </style>


    <!--IMAGE HOLDER-->

    <style name="StandardImageHolder" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="IncreaseDecreaseImageHolder" parent="StandardImageHolder">
        <item name="android:layout_height">40sp</item>
        <item name="android:layout_width">40sp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ExpandToggleImageHolder" parent="StandardImageHolder">
        <item name="android:layout_height">40sp</item>
        <item name="android:background">@color/default_color</item>
    </style>

    <style name="ManagePropertyImageHolder" parent="StandardImageHolder">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">32sp</item>
        <item name="android:background">@color/default_color</item>
    </style>



    <!--TOOLBAR-->

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize" tools:ignore="SpUsage">18dp</item>
    </style>

    <style name="ToolbarSubtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize" tools:ignore="SpUsage">12dp</item>
    </style>



    <!--NAVIGATION HEADER-->

    <style name="NavigationDrawerHeadline" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize" tools:ignore="SpUsage">22dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavigationDrawerSubhead" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize" tools:ignore="SpUsage">18dp</item>
    </style>

    <style name="NavigationDrawerItem">
        <item name="android:textSize">18sp</item>
    </style>



    <!--POPUP MENU-->

    <style name="PopupMenuListView" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">#000000</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

</resources>
