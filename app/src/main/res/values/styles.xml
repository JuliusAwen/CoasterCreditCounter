<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
    </style>

    <style name="standard_bar_layout_40" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="toolbar_title_16" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="toolbar_subtitle_12" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="standard_text_view_16" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="detail_text_view_10" parent="standard_text_view_16">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="spinner_label_text_view_16" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingStart">5dip</item>
        <item name="android:paddingEnd">5dip</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="standard_button_16" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="standard_image_holder_28" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>

    </style>

    <style name="selectable_image_holder_28" parent="standard_image_holder_28">
        <item name="android:background">@drawable/background_selectable_toggle</item>
    </style>

    <style name="standard_edit_text_16" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="navigation_drawer_headline_20" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="navigation_drawer_Subhead_16" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="navigation_drawer_16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PopupMenuListView" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">#000000</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

</resources>
