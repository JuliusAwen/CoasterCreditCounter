    <!--help texts-->
    <string name="help_text_manage_locations">
        <b><big>Manage Locations</big></b>
        \n\n <b>Toolbar</b>
        \n <li>Click back arrow to return to previous activity.</li>
        \n\n <b>Options Menu</b>
        \n <li><i>close icon:</i> change to browsing mode.</li>
        \n <li><i>rename root:</i> edit root locations name (available only on root level).</li>
        \n <li><i>sort:</i> change list entries order (only available if list contains multiple entries).</li>
        \n <li><i>help:</i> show this.</li>
        \n\n <b>Navigation Bar</b>
        \n <li>Click entry to move back to a recent location.</li>
        \n\n <b>Click Location</b>
        \n <li>Move into selected location.</li>
        \n\n <b>Hold Location</b>
        \n <li><i>edit:</i> change selected locations name.</li>
        \n <li><i>delete:</i> delete selected location and all its children.</li>
        \n <li><i>remove:</i> remove selected location and attach all its children to current location
        (only available if selected location has any children).</li>
        \n\n <b>Floating Action Button</b>
        \n <li><i>add location:</i> add new location on current location level.</li>
        \n <li><i>add park:</i> add new park on current location level.</li>
    </string>

    <string name="help_text_browse_locations">
        <b><big>Browse Locations</big></b>
        \n\n <b>Toolbar</b>
        \n <li>Click back arrow to return to previous activity.</li>
        \n\n <b>Options Menu</b>
        \n <li><i>pencil icon
        :</i> change to management mode.</li>
        \n <li><i>help:</i> show this.</li>
        \n\n <b>Navigation Bar</b>
        \n <li>Click entry to move back to a recent location.</li>
        \n\n <b>Click Location</b>
        \n <li>Move into selected location.</li>
    </string>

    <string name="help_text_sort_elements">
        <b><big>Sort</big></b>
        \n <li>Select entry and use up or down button to move selection. Accept changes with floating action button.</li>
        \n\n <b>Options Menu</b>
        \n <li><i>sort a-z:</i> order list alphabetically.</li>
        \n <li><i>help:</i> show this.</li>
    </string>

    <string name="help_text_pick_elements">
        <b><big>Pick</big></b>
        \n <li>Select entries and confirm.</li>
        \n <li><i>select/deselect all:</i> select/deselect all entries.</li>
    </string>

    <string name="help_text_add_location">
        <b><big>Add</big></b>
        \n <li>Name new location and confirm.</li>
        \n <li><i>add children:</i> check to choose which current locations children to add under new location
        (is automatically added if single child).</li>
    </string>

    <string name="help_text_edit_location">
        <b><big>Edit</big></b>
        \n <li>Rename location and confirm.</li>
    </string>

